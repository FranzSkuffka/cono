doctype html
html(ng-app='cono')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='An app that helps you enjoy conferences')
    meta(name='author', content='Cono GmbH')
    title Cono
    // LIBRARIES
    // jquery
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    // angular
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js')
    script(src='js/datetime.js')
    // firebase
    script(src='https://cdn.firebase.com/js/client/2.2.4/firebase.js')
    script(src='https://cdn.firebase.com/libs/angularfire/1.2.0/angularfire.min.js')
    // materialize
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // styles
    link(rel='stylesheet', href='css/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='css/master.css')
    // font
    link(href='https://fonts.googleapis.com/css?family=Raleway:400,600', rel='stylesheet', type='text/css')
  body
    header(ng-controller='userController')
      .row
        // TO DO: ABFRAGE ICON STATUS
        .col.s3(ng-if='userData')
          p
            span
              | Angemeldet als:
              br
              span.userName {{userData.name}}
          a#conf-setting(ng-if='canGoHome', href='/#/')
            .dashback
              i.fa.fa-reply.fa-2x(aria-hidden='true')
              span Dashboard
        .col.s6
          img.logo(src='img/logo.png', alt='cono Logo')
        #userInfo.col.s3
          // Dropdown Structure
          ul#dropdown1.dropdown-content
            li
              a(href='#/settings') Passwort Ã¤ndern
            li.divider
            li
              a(href='#!', ng-click='logout()') Logout
          ul.setting
            li
              a.dropdown-button(href='#!', data-activates='dropdown1', dropdown='', data-hover='true')
                i.fa.fa-cog.fa-2x(aria-hidden='true')
                span Einstellungen
                i.material-icons.right arrow_drop_down
    div
      #AppContent(ui-view='', autoscroll='false')
    footer
      ul
        li
          a(href='') Impressum
        li
          a(href='') Kontakt

    // end of app
    script(src='js/main.js')
    script(src='js/routes.js')
    script(src='js/directives/passwordValidator.js')
    script(src='js/controllers/registration.js')
    script(src='js/controllers/auth.js')
    script(src='js/controllers/user.js')
    script(src='js/controllers/settings.js')
    script(src='js/controllers/dashboard.js')
    script(src='js/controllers/edit.js')
    script(src='js/controllers/editTalk.js')
