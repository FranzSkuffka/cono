doctype html
html(ng-app='cono')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='An app that helps you enjoy conferences')
    meta(name='author', content='Cono GmbH')
    title Cono
    // LIBRARIES
    // jquery
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    // angular
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js')

    // third-party
    script(src='js/datetime.js')
    script(src='js/croppie.js')

    // firebase
    script(src='https://cdn.firebase.com/js/client/2.2.4/firebase.js')
    script(src='https://cdn.firebase.com/libs/angularfire/1.2.0/angularfire.min.js')
    // materialize
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // styles
    link(rel="Stylesheet" type="text/css" href="http://foliotek.github.io/Croppie/croppie.css")


    != css()
    // font
    link(href='https://fonts.googleapis.com/css?family=Raleway:400,600', rel='stylesheet', type='text/css')
  body

    .navbar-fixed(ng-controller='userController')
      nav.white
        .nav-wrapper: .container

          img.Logo.brand-logo.center(src='img/logo.png', alt='cono Logo')

          ul.left

            li(ng-class='{"active": !canGoHome}' ng-if='userData')
              a(href='/#/' ng-class='{"blue-text": canGoHome, "black-text": !canGoHome}')
                i.material-icons.right view_module
                span Dashboard

          ul.right(ng-if='userData')

            li: a(href='#/settings').blue-text
              span {{userData.name}}
              i.material-icons.left person
            li: a(href='#/logout').blue-text Logout


    .container.section#AppContent(ui-view='', autoscroll='false')

    footer.page-footer.grey
      .container
        .row
          .col.16.s12
            ul
              li
                a.white-text(href='') Impressum
              li
                a.white-text(href='') Kontakt
      .footer-copyright

    // end of app
    script(src='js/main.js')
    script(src='js/routes.js')
    script(src='js/directives/passwordValidator.js')
    script(src='js/controllers/registration.js')
    script(src='js/controllers/auth.js')
    script(src='js/controllers/user.js')
    script(src='js/controllers/settings.js')
    script(src='js/controllers/dashboard.js')
    script(src='js/controllers/edit.js')
    script(src='js/controllers/editTalk.js')
